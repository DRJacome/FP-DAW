<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" alignment="CENTER" prefHeight="347.0" prefWidth="352.0" spacing="20.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.david.pruebafx.SecondaryController">
    <children>
        <Label text="Pantalla 2" />
      <HBox fx:id="hBox" prefHeight="100.0" prefWidth="200.0">
         <children>
            <CheckBox mnemonicParsing="false" text="CheckBox" />
            <DatePicker />
         </children>
      </HBox>
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Cambiar a pantalla principal" />
      <ListView prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: blue;" />
      <ToggleButton fx:id="botonModoOscuro" mnemonicParsing="false" onAction="#cambiarModoOscuro" style="-fx-background-color: red;" text="Modo Oscuro" textFill="WHITE" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
